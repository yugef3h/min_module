<view class="page">
    <view class="page__bd">
        <view class="user">
          <view class="user_hd">
            <view class='avatar'>
              <open-data type="userAvatarUrl"></open-data>
            </view>
          </view>
          <view class="user_bd"><open-data type="userNickName"></open-data></view>
          <view class='user_ft'>余额：{{coin}}</view>
        </view>

        <view class="weui-cells">
            <navigator url="/pages/user/transaction/transaction" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="../../image/icon_trans.png" class='icon'></image>
                </view>
                <view class="weui-cell__bd">我的订单</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        
            <navigator url="/pages/user/transaction/transaction" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                  <image src="../../image/icon_contact.png" class='icon'></image>
              </view>
              <view class="weui-cell__bd">
                收货地址
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
    </view>
</view>